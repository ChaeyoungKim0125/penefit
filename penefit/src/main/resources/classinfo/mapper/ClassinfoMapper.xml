<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.penefit.moons.mapper.ClassinfoMapper">
	<!-- xml이 동작하는 인터페이스의 주소 -->
	
	<!--클래스 목록 조회  -->
	<select id="getClassList" resultType="com.penefit.moons.domain.ClassVO">
		select * from class
	</select>
	<!--카테고리 별 클래스 목록 조회  -->
	<select id="getCtgClassList" resultType="com.penefit.moons.domain.ClassVO">
		select * from class where class_code like CONCAT(#{key },'%')
	</select>
	
	<!--신규 클래스 목록 조회  -->
	<select id="getNewClassList" resultType="com.penefit.moons.domain.ClassVO">
		select * from class order by class_regdate desc limit 8
	</select>
</mapper>